<div data-hook="admin_gift_card_form_fields" class="row clearfix">
  <% gift_card = @gift_card || f.object.persisted? && f.object.gift_card? %>
  <% if gift_card %>
    <div class="col-md-5">
      <%= f.field_container :email do %>
        <%= f.label :email, Spree.t("recipient_email") %> <span class="required">*</span><br/>
        <%= f.text_field :email, class: 'form-control' %>
        <%= f.error_message_on :email %>
      <% end %>
    </div>
    <div class="col-md-5">
      <%= f.field_container :name do %>
        <%= f.label :name, Spree.t("recipient_name") %> <span class="required">*</span><br/>
        <%= f.text_field :name, class: 'form-control' %>
        <%= f.error_message_on :name %>
      <% end %>
    </div>
    <div class="col-md-5">
      <%= f.field_container :sender_email do %>
        <%= f.label :sender_email, Spree.t("sender_email") %> <span class="required">*</span><br/>
        <%= f.text_field :sender_email, class: 'form-control' %>
        <%= f.error_message_on :sender_email %>
      <% end %>
    </div>
    <div class="col-md-5">
      <%= f.field_container :sender_name do %>
        <%= f.label :sender_name, Spree.t("sender_name") %> <span class="required">*</span><br/>
        <%= f.text_field :sender_name, class: 'form-control' %>
        <%= f.error_message_on :sender_name %>
      <% end %>
    </div>
    <div class="col-md-5">
      <%= f.field_container :delivery_date do %>
        <%= f.label :delivery_date, Spree.t("delivery_date") %> <span class="required">*</span><br/>
        <%= f.datetime_select :delivery_date, class: 'form-control' %>
        <%= f.error_message_on :delivery_date %>
      <% end %>
    </div>
    <div class="col-md-5">
      <%= f.field_container :message do %>
      <%= f.label :message %>
      <%= f.text_area :message, rows: 3, class: 'form-control' %>
      <%= f.error_message_on :message %>
      <% end %>
    </div>
    <div class="col-md-5">
      <%= f.field_container :variant_id do %>
      <%= f.label 'Select Variant' %>
      <%= f.select :variant_id, 
      options_from_collection_for_select(Spree::Variant.joins(:product).where(product: { is_gift_card: true }), :id, :name), 
      {}, 
      { class: 'form-control' } %>
      <%= f.error_message_on :variant_id %>
      <% end %>
    </div>
  <% end %>
  <div class="col-md-5">
    <%= f.field_container :original_value do %>
      <%= f.label :original_value, Spree.t(:value) %> <span class="required">*</span><br/>
      <%= f.number_field :original_value, class: 'form-control' %>
    <% end %>
  </div>

</div>
